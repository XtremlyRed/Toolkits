<Window
    x:Class="WPF_UI_TEST.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_UI_TEST"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="https://github.com/xtremlyred/toolkits"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <AdornerDecorator PopupManager.ContainerName="MainPopupContainer" PopupManager.IsMainContainer="True">
        <Button
            Height="20"
            toolkit:Animation.SlideY="{toolkit:SlideYDeclareExtension Duration=0:0:05,
                                                                      From=100,
                                                                      To=0}"
            Animation.Play="False"
            Animation.ScaleX="{toolkit:ScaleXDeclareExtension Duration=0:0:05,
                                                              From=100,
                                                              To=1}"
            Click="Button_Click"
            Content="Open Popup" />
    </AdornerDecorator>


</Window>
