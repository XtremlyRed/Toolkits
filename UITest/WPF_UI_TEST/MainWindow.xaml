<Window
    x:Class="WPF_UI_TEST.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_UI_TEST"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="https://github.com/xtremlyred/toolkits"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <AdornerDecorator toolkit:PopupManager.ContainerName="MainPopupContainer" toolkit:PopupManager.IsMainContainer="True">
        <Button
            Width="{Double Value=100}"
            Background="Red"
            Click="Button_Click"
            Content="Open Popup">


            <toolkit:Animation.Declare>

                <toolkit:AnimationDeclareGroup Play="{Binding Play}">



                    <toolkit:SlideXAnimation
                        SlideMode="Left"
                        From="-200"
                        To="0"
                        Duration="0:0:01" />
                    <toolkit:SlideYAnimation
                        SlideMode="Top"
                        From="200"
                        To="0"
                        Duration="0:0:01" />

                    <toolkit:ThicknessAnimationDeclare
                        Property="{x:Static Button.MarginProperty}"
                        From="0,0,0,0"
                        To="100"
                        Duration="0:0:01" />
                </toolkit:AnimationDeclareGroup>
            </toolkit:Animation.Declare>
        </Button>
    </AdornerDecorator>


</Window>
